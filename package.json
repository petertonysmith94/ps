{
  "name": "@webpod/ps",
  "version": "0.0.0",
  "description": "A process lookup utility",
  "type": "module",
  "main": "target/cjs/index.cjs",
  "exports": {
    ".": {
      "types": "./target/dts/index.d.ts",
      "require": "./target/cjs/index.cjs",
      "import": "./target/esm/index.mjs",
      "default": "./target/esm/index.mjs"
    }
  },
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:js": "node ./src/scripts/build.mjs",
    "build:dts": "tsc --emitDeclarationOnly --skipLibCheck --outDir target/dts",
    "build:docs": "typedoc --options src/main/typedoc",
    "build:stamp": "npx buildstamp",
    "test": "concurrently 'npm:test:*'",
    "test:lint": "eslint -c src/test/lint/.eslintrc.json src",
    "test:unit": "c8 -r lcov -r text -o target/coverage -x src/scripts -x src/test -x target node --loader ts-node/esm --experimental-specifier-resolution=node src/scripts/test.mjs",
    "_test": "node ./node_modules/mocha/bin/mocha -t 0 -R spec test/test.cjs",
    "_testWatch": "node ./node_modules/mocha/bin/mocha -t 0 -R spec --watch test/test.cjs"
  },
  "keywords": [
    "ps",
    "process",
    "lookup",
    "pid"
  ],
  "dependencies": {
    "@webpod/ingrid": "^0.0.0-beta.0"
  },
  "devDependencies": {
    "mocha": "^10.3.0",
    "sinon": "^17.0.1",
    "@types/node": "^20.11.15",
    "c8": "^9.1.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.0",
    "esbuild-node-externals": "^1.12.0",
    "esbuild-plugin-entry-chunks": "^0.1.5",
    "eslint": "^8.56.0",
    "eslint-config-qiwi": "^2.1.3",
    "fast-glob": "^3.3.2",
    "minimist": "^1.2.8",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/webpod/ps.git"
  },
  "license": "MIT"
}
